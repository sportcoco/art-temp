.new-years-box[data-sport]
  position absolute
  top 5%
  left 50%
  z-index 99999
  width 750px
  height 945px
  margin-left -375px

.new-years-box[data-sport] .cont-box
  position relative
  height 100%
  background url('../img/bg.jpg') no-repeat center
  background-size cover

.new-years-box[data-sport] .cont-box .close-btn
  position absolute
  width 42px
  height 42px
  top 16px
  right 20px
  background url('../img/close_btn.png') no-repeat center
  background-size contain
  cursor pointer

.new-years-box[data-sport] .cont-box .c-info-box
  position absolute
  bottom 0
  width 730px
  height 405px
  padding 40px
  left 50%
  margin-left -365px
  background url('../img/bg2.png') no-repeat center
  background-size cover

.new-years-box[data-sport] .cont-box .c-info-box:before
  content ''
  position absolute
  right 84px
  top 6px
  width 56px
  height 48px
  background url('../img/icon1.png') no-repeat center
  background-size cover

.new-years-box[data-sport] .cont-box .c-info-box:after
  content ''
  position absolute
  right 154px
  bottom 36px
  width 90px
  height 74px
  background url('../img/icon2.png') no-repeat center
  background-size cover

.new-years-box[data-sport] .cont-box .c-info-box .c-tit
  height 66px
  line-height 66px
  text-align center
  font-size 24px
  font-weight bold
  color #ffdcb0

.new-years-box[data-sport] .cont-box .c-info-box .info
  background #ffdcb0
  margin 0 auto
  width 630px
  height 240px
  padding 30px 50px

.new-years-box[data-sport] .cont-box .c-info-box .info .i-img
  display table-cell
  vertical-align middle
  text-align center
  width 200px
  height 172px
  overflow hidden

.new-years-box[data-sport] .cont-box .c-info-box .info .i-img img
  width 100%
  height 100%

.new-years-box[data-sport] .cont-box .c-info-box .info .i-text-box
  display table-cell
  vertical-align middle
  padding-left 36px

.new-years-box[data-sport] .cont-box .c-info-box .info .i-text-box .i-t-tit
  font-size 20px
  font-weight bold
  color #d6682b
  line-height 1
  margin-bottom 20px

.new-years-box[data-sport] .cont-box .c-info-box .info .i-text-box .i-t-cont
  font-size 15px
  color #d6682b
  font-weight 600
  line-height 28px